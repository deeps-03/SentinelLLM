FROM python:3.9-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    g++ \
    gcc \
    cmake \
    wget \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy requirements and install dependencies
COPY requirements_simple.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY core/simple_consumer.py ./simple_consumer.py
COPY models/xgboost_model.pkl ./xgboost_model.pkl
COPY models/vectorizer.pkl ./vectorizer.pkl
COPY models/label_encoder.pkl ./label_encoder.pkl

# Use the working simple consumer
CMD ["python", "simple_consumer.py"]