
FROM python:3.9-slim

# Install FastAPI and Uvicorn
RUN pip install fastapi uvicorn

# Copy the app
COPY gemma_wrapper_api.py /app/gemma_wrapper_api.py
WORKDIR /app

# Install Docker CLI inside container (Debian-based)
RUN apt-get update && apt-get install -y docker.io && rm -rf /var/lib/apt/lists/*

# Expose port
EXPOSE 8000

# Run the API server
CMD ["uvicorn", "gemma_wrapper_api:app", "--host", "0.0.0.0", "--port", "8000"]
